<script>
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    const eng=(new Date()).toLocaleDateString("en-US", options);
    const hindi=(new Date()).toLocaleDateString("hi-IN", options);
    document.getElementById('hindi_date').innerHTML=hindi;
    document.getElementById('english_date').innerHTML=eng;
</script>
